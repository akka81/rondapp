<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RondApp.Views.CentersList">

  <Label x:Name="SearchResults" HorizontalTextAlignment="End" Text="{Binding SearchResults}"></Label>
  <ScrollView>  
    <ListView x:Name="centersList" VerticalOptions="FillAndExpand" SeparatorVisibility="None">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <Grid Margin="5" Padding="0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="5"  />
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"></RowDefinition>
              <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" BackgroundColor="#03A9F4">
            </Label>
          
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}" BackgroundColor="#FFF" TextColor="#000"></Label>
            
            <Label FontSize="Micro" Grid.Row="1" Grid.Column="1" Text="{Binding TypeName}" BackgroundColor="#FFF" TextColor="#000"></Label>
           
           
          </Grid>
          
          
        </ViewCell> 
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
  </ScrollView>



</ContentPage>